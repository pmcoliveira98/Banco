<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/edt"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button3"
        android:layout_marginTop="-75dp"
        android:layout_marginEnd="-100dp"
        android:layout_marginRight="-100dp"
        android:layout_toStartOf="@+id/buttonadicionar"
        android:layout_toLeftOf="@+id/buttonadicionar" />


    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt1"
        android:layout_alignEnd="@+id/button4"
        android:layout_alignRight="@+id/button4"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:text="1"
        app:backgroundTint="#F44336" />

    <Button
        android:id="@+id/button2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button1"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_toStartOf="@+id/button3"
        android:layout_toLeftOf="@+id/button3"
        android:text="2"
        app:backgroundTint="#F44336" />

    <Button
        android:id="@+id/button3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button2"
        android:layout_centerHorizontal="true"
        android:text="3"
        app:backgroundTint="#F44336" />

    <Button
        android:id="@+id/button4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_marginTop="0dp"
        android:layout_marginRight="22dp"
        android:layout_toLeftOf="@+id/button2"
        android:text="4"
        app:backgroundTint="#F44336" />

    <Button
        android:id="@+id/button5"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignBottom="@+id/button4"
        android:text="5"
        app:backgroundTint="#F44336" />

    <Button
        android:id="@+id/button6"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:text="6"
        app:backgroundTint="#F44336" />

    <Button
        android:id="@+id/button7"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_marginTop="-1dp"
        android:layout_marginRight="21dp"
        android:layout_toLeftOf="@+id/button2"
        android:text="7"
        app:backgroundTint="#F44336" />

    <Button
        android:id="@+id/button8"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:text="8"
        app:backgroundTint="#F44336" />

    <Button
        android:id="@+id/button9"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:text="9"
        app:backgroundTint="#F44336" />

    <Button
        android:id="@+id/buttonadicionar"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="130dp"
        android:layout_height="43dp"
        android:layout_alignTop="@+id/button3"
        android:layout_alignEnd="@+id/edt1"
        android:layout_alignRight="@+id/edt1"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:text="Depositar"
        app:backgroundTint="#4CAF50" />

    <Button
        android:id="@+id/buttonsub"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonadicionar"
        android:layout_alignEnd="@+id/buttonadicionar"
        android:layout_alignRight="@+id/buttonadicionar"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:text="Levantar"
        app:backgroundTint="#4CAF50" />

    <Button
        android:id="@+id/buttonPonto"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button7"
        android:layout_marginTop="2dp"
        android:layout_marginRight="23dp"
        android:layout_toLeftOf="@+id/button2"
        android:text="."
        app:backgroundTint="#F44336" />

    <Button
        android:id="@+id/button0"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button8"
        android:layout_alignStart="@+id/button8"
        android:layout_alignLeft="@+id/button8"
        android:text="0"
        app:backgroundTint="#F44336" />

    <Button
        android:id="@+id/buttonLimpar"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button0"
        android:layout_alignEnd="@+id/button0"
        android:layout_alignRight="@+id/button0"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="-203dp"
        android:layout_marginRight="-203dp"
        android:text="Limpar valores"
        app:backgroundTint="#03A9F4" />

    <Button
        android:id="@+id/buttonFinalizar"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button0"
        android:layout_alignStart="@+id/buttonPonto"
        android:layout_alignLeft="@+id/buttonPonto"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="77dp"
        android:text="Finalizar Operação"
        app:backgroundTint="#03A9F4" />

    <TextView
        android:id="@+id/edt2"
        android:layout_width="319dp"
        android:layout_height="236dp"
        android:layout_below="@+id/buttonFinalizar"
        android:layout_alignStart="@+id/buttonFinalizar"
        android:layout_alignLeft="@+id/buttonFinalizar"
        android:layout_marginStart="-2dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="22dp"
        android:lines="10"
        android:text="Histórico" />

</RelativeLayout>